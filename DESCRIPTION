Package: sits
Type: Package
Title: Satellite Image Time Series Analysis
Version: 0.7.6
Date: 2017-07-06
Authors@R: c(person('Gilberto', 'Camara', role = c('aut', 'cre'), email = 'gilberto.camara@inpe.br'), 
             person('Victor', 'Maus', role = c('aut'), email = 'vwmaus1@gmail.com'),
